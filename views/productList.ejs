<%- include('header.ejs') %>
        <main>
            <div class="container">
                <div class="row">
                    <div class="col-lg-2">
                        filters
                    </div>
                    <div class="col-lg-10">
                        <div class="d-flex justify-content-end mb-4">
                            <a class="btn btn-primary" href="/products/create">Add Product</a>
                        </div>
                        <div class="row">
                            <% data.productList.forEach(item => { %>
                                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                                    <div class="card shadow-sm">
                                        <img src="<%= '/images/products/' + item.image %>" alt="" class="card-img-top" height="225">
                                        <!-- <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg> -->
                                        <div class="card-body">
                                            <h5 class="card-title"><%- item.name %></h5>
                                            <p class="card-text">from <%= item.vendor.name %></p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="btn-group">
                                                    <a class="btn btn-sm btn-outline-secondary" href="<%= item.url %>">View</a>
                                                </div>
                                                <small class="text-muted">Stock: <%= item.stock %></small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </main>
<%- include('footer.ejs') %>